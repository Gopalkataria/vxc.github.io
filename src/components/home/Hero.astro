---
import { GLOBAL } from "../../lib/variables";
import { CircuitBoard } from "lucide-react";
import { Alert, AlertDescription, AlertTitle } from "@/components/ui/alert";
---

<div class="flex flex-col items-center sm:flex-row gap-8">
  <div>
    <h1
      class="text-7xl sm:text-6xl font-display font-semibold opsz text-center sm:text-left"
    >
      {GLOBAL.username}
    </h1>
    <h2
      class="text-center text-lg sm:text-base font-mono font-medium text-left mt-4"
    >
      <ul>
        <!-- get it from GLOBAL.LongDescription List -->
        {GLOBAL.longDescription.map((desc) => <li>{desc}</li>)}
      </ul>
    </h2>
  </div>
  <img
    src="/venkatesh-chopella.png"
    alt="Venkatesh Chopella"
    class="rounded-md max-w-60 w-60 h-60 mb-4 z-0"
  />
</div>
<Alert className="mt-8">
  <CircuitBoard className="h-4 w-4" />
  <AlertTitle>Monsoon 2024</AlertTitle>
  <AlertDescription>
    Funded MS/CSD research position (in collaboration) with ABB Research.
  </AlertDescription>
</Alert>
